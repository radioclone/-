{
  "name": "web3-ecosystem",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.12.3",
  "workspaces": [
    "packages/*",
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter api-server dev\" \"pnpm --filter vortex dev --port 3000\" \"pnpm --filter aa-demo-ui dev --port 3002\" \"pnpm --filter aliza-crypto-forecaster dev --port 3003\"",
    "dev:all": "concurrently -n \"api,vortex,scs,aliza\" -c \"green,white,cyan,magenta\" \"pnpm --filter api-server dev\" \"pnpm --filter vortex dev --port 3000\" \"pnpm --filter aa-demo-ui dev --port 3002\" \"pnpm --filter aliza-crypto-forecaster dev --port 3003\"",
    "build": "pnpm --parallel run build",
    "test": "pnpm --parallel run test",
    "clean": "pnpm -r exec rm -rf node_modules",
    "update": "pnpm up",
    "dev:api": "pnpm --filter api-server dev",
    "dev:vortex": "pnpm --filter vortex dev --port 3000",
    "dev:scs": "pnpm --filter aa-demo-ui dev --port 3002",
    "dev:aliza": "pnpm --filter aliza-crypto-forecaster dev --port 3003",
    "build:all": "pnpm build --recursive",
    "type-check": "pnpm -r run type-check",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "test:all": "pnpm -r run test",
    "api:mock": "node server/mock-api.js"
  },
  "devDependencies": {
    "typescript": "^5.3.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.0.0",
    "vite": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "viem": "^2.0.0",
    "wagmi": "^2.0.0",
    "@rainbow-me/rainbowkit": "^2.0.0",
    "@web3auth/modal": "^8.0.0",
    "@web3auth/base": "^8.0.0",
    "@web3auth/ethereum-provider": "^8.0.0",
    "@web3auth/single-factor-auth": "^8.0.0",
    "@web3auth/openlogin-adapter": "^8.0.0",
    "@web3auth/wallet-connect-v2-adapter": "^8.0.0",
    "zustand": "^4.4.0",
    "jotai": "^2.6.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "ethers": "^6.8.0",
    "permissionless": "^0.1.25",
    "framer-motion": "^10.16.0",
    "recharts": "^2.8.0",
    "date-fns": "^2.30.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.292.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18"
  }
}